.btn-{{ lowerCase themeColor }} {
  @apply border-{{ lowerCase themeColor }}-{{ buttonBaseNumber }} bg-{{ lowerCase themeColor }}-{{ buttonBaseNumber }} {{ buttonTextClass }};
  @apply hocus:border-{{ lowerCase themeColor }}-{{ buttonActiveNumber }} hocus:bg-{{ lowerCase themeColor }}-{{ buttonActiveNumber }} hocus:{{ buttonTextClass }};
  @apply focus:outline-none focus:ring focus:ring-{{ lowerCase themeColor }}-{{ buttonFocusRingNumber }} focus:ring-opacity-50;
  @apply disabled:border-{{ lowerCase themeColor }}-{{ buttonBaseNumber }} disabled:bg-{{ lowerCase themeColor }}-{{ buttonBaseNumber }};
}

.btn-outline-{{ lowerCase themeColor }} {
  @apply border-{{ lowerCase themeColor }}-{{ buttonBaseNumber }} bg-transparent text-{{ lowerCase themeColor }}-{{ buttonBaseNumber }};
  @apply hocus:border-{{ lowerCase themeColor }}-{{ buttonActiveNumber }} hocus:bg-{{ lowerCase themeColor }}-{{ buttonActiveNumber }} hocus:{{ buttonTextClass }};
  @apply focus:outline-none focus:ring focus:ring-{{ lowerCase themeColor }}-{{ buttonFocusRingNumber }} focus:ring-opacity-50;
  @apply disabled:border-{{ lowerCase themeColor }}-{{ buttonBaseNumber }} disabled:bg-transparent disabled:text-{{ lowerCase themeColor }}-{{ buttonBaseNumber }};
}
